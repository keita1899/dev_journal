<div class="min-h-screen py-10">
  <div class="container mx-auto px-4 max-w-4xl">
    
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-white">技術記事</h1>
      <%= link_to "＋ 記事を書く", new_article_path, class: "inline-block bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium transition shadow-lg shadow-indigo-900/20" %>
    </div>

    <% if @articles.present? %>
      <%= render "articles_list", articles: @articles %>

      <div class="mt-10 flex justify-center">
        <%== @pagy.series_nav(slots: 7) if @pagy.last > 1 %>
      </div>

    <% else %>
      <%= render "shared/empty_state", message: "まだ記事が投稿されていません" %>
    <% end %>

  </div>
</div>